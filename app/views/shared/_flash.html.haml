- flash.each do |key, value|
  .toast-container.top-0.end-0.p-3
    %div{'aria-atomic': true, 'aria-live': :assertive, role: :alert, class: "toast #{flash_class(key)} show"}
      .d-flex
        .toast-body= value
        %button.btn-close.me-2.m-auto{'aria-label': :Close, 'data-bs-dismiss': :toast, type: :button}
